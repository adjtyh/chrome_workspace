chrome.extension.onMessage.addListener(
        function(request, sender, sendResponse) {  
            if (request.msg == "ok") {  
            	//接收到ok命令
        		console.log("接受" + "ok" + "成功!");
        		//持续点击一键购买
        		var mysInter = setInterval(function(){$("#btn-onkeybuy")[0].click();},100);
        		setTimeout(function(){
        			clearInterval(mysInter);
        			$("#btn-onkeybuy")[0].click();
        			},1000);
            }  
            else  
                sendResponse({result: "不告诉你"})  
        });  

if(location.pathname=="/shopping/order/getEasyOrderInfo.action"){
	//持续点击提交订单
	var mysInter1 = setInterval(function(){$("#order-submit")[0].click();},100);
	setTimeout(function(){
		clearInterval(mysInter1);
		$("#btn-onkeybuy")[0].click();
		},2000);
	
}

